---
import BaseLayout from '../layouts/BaseLayout.astro'
import Shape12 from '../assets/shapes/12.svg'
---

<Fragment>
    <BaseLayout pageTitle="Welcome" class="bg-grid main">
        <h1>Hi! I'm <span class="name border shadow">Zuza</span></h1>
        <h2>Creative <span class="job">Frontend Developer</span></h2>
    </BaseLayout>

    <Shape12 class="shape shape-shadow" aria-hidden="true" />
</Fragment>

<style>
    body {
        --bg-grid-color: var(--clr-light);
        background-color: var(--clr-blue);
    }

    h1 {
        margin-block-end: 0.2em;
    }

    .name {
        display: inline-block;
        padding: 0.1em 0.3em;
        transition: rotate 0.3s cubic-bezier(0.8, 0.07, 0.05, 0.8);
        background-color: var(--clr-lightpink);
        line-height: 1;
        rotate: -6deg;

        &:where(:hover) {
            rotate: 6deg;
        }
    }

    .job {
        text-decoration: underline;
        text-decoration-color: var(--clr-darkpink);
        text-decoration-style: wavy;
        text-decoration-thickness: 0.07em;
        text-underline-offset: 0.1em;
    }

    .shape {
        --size: 5em;
        position: absolute;
        z-index: -1;
        block-size: var(--size);
        inline-size: var(--size);
        margin: var(--space-500);
        overflow: visible;
        animation: rotate 30s linear infinite;
        color: var(--clr-green);
        inset: var(--space-700) auto auto var(--space-600);

        @media screen and (width >= 36em) {
            --size: 8em;
            inset: auto var(--space-900) var(--space-700) auto;
        }

        path {
            stroke-width: 1em;
            stroke: var(--clr-dark);
            stroke-linejoin: round;
            paint-order: stroke;
        }
    }
</style>
